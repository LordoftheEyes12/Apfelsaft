<% const pageTitle = article.headline; %>
<%- include('partials/_layout', { title: pageTitle, body: `
  <article class="article">
    <a class="breadcrumb" href="/">‚Üê Back to Home</a>
    <h1 class="article-title">${article.headline}</h1>
    <p class="article-meta">
      <time datetime="${new Date(article.createdAt).toISOString()}">
        ${dayjs(article.createdAt).format('MMMM D, YYYY HH:mm')}
      </time>
    </p>
    <hr class="divider" />
    <div class="article-content">
      <p>${article.content}</p>
    </div>
  </article>
` }) %>
